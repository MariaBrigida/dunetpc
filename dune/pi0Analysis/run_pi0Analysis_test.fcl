#include "pi0AnalysisConfig.fcl"
#include "simulationservices_dune.fcl"
#include "services_dune.fcl"

process_name: Pi0Analysis

source:
{
  module_type:	RootInput
	      	maxEvents:	-1
}

services:
{
   @table::dunefd_simulation_services
   TFileService: { fileName: "pi0AnalysisOutput.root"}
   #ExptGeoHelperInterface:         @local::dune_geometry_helper
   #Geometry: @local::dune10kt_1x2x6_refactored_geo
   #Geometry: @local::dune10kt_v2_1x2x6
   #Geometry: @local::dune10kt_1x2x6_v2_geo
   Geometry: @local::dune10kt_1x2x6_v4_geo

}

physics:
{
   analyzers:
   {
      ana:	@local::pi0Analysis
   }
   path0:	[ ana ]
   end_paths:	[ path0 ]
}

#block to define where the output goes.  if you defined a filter in the physics
#block and put it in the trigger_paths then you need to put a SelectEvents: {SelectEvents: [XXX]}
#entry in the output stream you want those to go to, where XXX is the label of the filter module(s)
outputs:
{
 out1:
 {
   module_type: RootOutput
   fileName:    "%ifb_ana.root"
   dataTier:    "pi0-analysed"
   compressionLevel: 1
   saveMemoryObjectThreshold: 0
 }
}
